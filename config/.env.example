# Stock Analyzer Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Stock Analyzer
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
DEBUG=false

# Data Provider Configuration
PRIMARY_PROVIDER=yahoo  # yahoo, alpha_vantage, polygon
# FALLBACK_PROVIDERS=alpha_vantage,polygon

# API Keys (Optional - for enhanced features)
# Get free key at: https://www.alphavantage.co/support/#api-key
# ALPHA_VANTAGE_API_KEY=your_key_here

# Get key at: https://polygon.io/
# POLYGON_API_KEY=your_key_here

# Get key at: https://finnhub.io/
# FINNHUB_API_KEY=your_key_here

# Database Configuration (Optional - for persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/stock_analyzer

# Cache Configuration (Optional - for performance)
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300  # 5 minutes
ENABLE_CACHE=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT_SECONDS=30

# Market Data Settings
DEFAULT_LOOKBACK_PERIOD=1y
MIN_MARKET_CAP=1000000000  # $1B minimum
MIN_AVG_VOLUME=500000  # 500k shares

# Analysis Settings
MIN_DATA_POINTS=60  # Minimum days of data required
SCORE_THRESHOLD=60.0  # Minimum score for buy signal
MAX_CONCURRENT_REQUESTS=50  # Max parallel API calls

# Stock Universe Settings
FETCH_UNIVERSE_FROM_LIVE=true
# STOCK_EXCHANGES=NASDAQ,NYSE,AMEX
# EXCLUDE_SECTORS=Utilities,Real Estate
